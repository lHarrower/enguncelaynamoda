# AYNAMODA Production Environment Configuration
# Copy this file to .env and fill in your actual production values
# NEVER commit actual secrets to version control

# =============================================================================
# CORE SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================

# Your Supabase project URL (e.g., https://your-project-id.supabase.co)
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key (safe to expose in client)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# AUTHENTICATION CONFIGURATION (REQUIRED)
# =============================================================================

# Google OAuth Web Client ID (from Google Cloud Console)
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id.apps.googleusercontent.com

# Optional: Native client IDs for better mobile experience
# EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
# EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com

# =============================================================================
# AI & MACHINE LEARNING CONFIGURATION
# =============================================================================

# Enable AI proxy for secure API calls (RECOMMENDED: true)
EXPO_PUBLIC_USE_AI_PROXY=true

# Optional: Direct Hugging Face token (only if not using proxy)
# EXPO_PUBLIC_HUGGINGFACE_TOKEN=hf_your_token_here

# =============================================================================
# MEDIA & STORAGE CONFIGURATION
# =============================================================================

# Cloudinary configuration for image uploads
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================

# Weather API for outfit recommendations
EXPO_PUBLIC_WEATHER_API_KEY=your_openweather_api_key

# Error monitoring and crash reporting
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Payment processing (if implementing premium features)
# EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# =============================================================================
# SUPABASE EDGE FUNCTION SECRETS (SERVER-SIDE ONLY)
# =============================================================================
# These should be configured in Supabase Dashboard > Settings > Edge Functions
# DO NOT add these to your .env file as they are server-side secrets

# OPENROUTER_API_KEY=sk-or-your-openrouter-api-key
# SUPABASE_URL=https://your-project-id.supabase.co
# SUPABASE_ANON_KEY=your_supabase_anon_key_here
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment identifier
NODE_ENV=production

# App metadata for analytics
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. All EXPO_PUBLIC_* variables are exposed in the client bundle
# 2. Never expose service role keys or private API keys in EXPO_PUBLIC_* variables
# 3. Use Supabase Edge Functions for server-side API calls requiring secrets
# 4. Rotate keys regularly and monitor for unauthorized usage
# 5. Enable Row Level Security (RLS) in Supabase for all tables
# 6. Use environment-specific configurations for development/staging/production

