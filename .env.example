# AYNAMODA Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit real API keys to version control

# ==============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ==============================================
# Get these from your Supabase project dashboard
# Go to Settings > API to find your project URL and anon key
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ==============================================
# APP CONFIGURATION
# ==============================================
# Environment: development, staging, production
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_NAME=AYNAMODA
EXPO_PUBLIC_BUNDLE_ID=com.aynamoda.app

# ==============================================
# AI/ML SERVICES
# ==============================================
# Hugging Face for AI models
EXPO_PUBLIC_HUGGINGFACE_TOKEN=your_huggingface_api_token_here

# OpenAI API for advanced AI features
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Google Vision API for image recognition
EXPO_PUBLIC_GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# ==============================================
# AUTHENTICATION & SOCIAL
# ==============================================
# Google OAuth for social login
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_oauth_client_id_here
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id_here
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id_here

# Facebook App ID for social login
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id_here

# ==============================================
# EXTERNAL APIS
# ==============================================
# Weather API for outfit recommendations
EXPO_PUBLIC_WEATHER_API_KEY=your_openweathermap_api_key_here

# Fashion/Shopping APIs
EXPO_PUBLIC_FASHION_API_KEY=your_fashion_api_key_here

# ==============================================
# ANALYTICS & MONITORING
# ==============================================
# Sentry for error tracking and performance monitoring
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_organization_here
SENTRY_PROJECT=aynamoda
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Google Analytics 4
EXPO_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Enable/disable analytics collection
EXPO_PUBLIC_ANALYTICS_ENABLED=false

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable AR features
EXPO_PUBLIC_ENABLE_AR_FEATURES=true

# Enable/disable social features
EXPO_PUBLIC_ENABLE_SOCIAL_FEATURES=true

# Enable/disable premium features
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=false

# Enable/disable AI-powered features
EXPO_PUBLIC_ENABLE_AI_FEATURES=true

# Enable/disable push notifications
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================
# Environment settings
NODE_ENV=development
EXPO_PUBLIC_API_URL=http://localhost:3000

# Debug settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_ENABLE_FLIPPER=true

# ==============================================
# PAYMENT & COMMERCE (OPTIONAL)
# ==============================================
# Stripe for payment processing
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ==============================================
# LOCALIZATION
# ==============================================
# Default language and supported languages
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,tr,es,fr,de

# ==============================================
# SECURITY NOTES
# ==============================================
# 1. Never commit .env files with real values to version control
# 2. Use different API keys for development/staging/production environments
# 3. Rotate API keys regularly for security
# 4. Use environment-specific deployment configurations
# 5. Keep sensitive keys server-side when possible
# 6. Monitor API key usage and set up alerts for unusual activity
# 7. Use the principle of least privilege for API permissions